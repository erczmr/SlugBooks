<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayoutId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_grey_border_bottom"
    android:padding="20dp">

    <ImageView
        android:id="@+id/bookPictureId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/bookNameId"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookPictureId"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/bookPictureId"
        android:layout_toRightOf="@+id/bookPictureId"
        android:maxLines="2"
        android:fontFamily="@font/romand"
        android:text="book Name"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookPictureId"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/bookPictureId"
        android:maxLines="1"
        android:text="Book Author"
        android:fontFamily="@font/cour"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/bookClass"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/bookPictureId"
        android:maxLines="1"
        android:text="Class"
        android:fontFamily="@font/cour"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sendMsgButtonId"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookAuthor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_edit_yellow_24dp" />


</RelativeLayout>
